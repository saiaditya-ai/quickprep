# Backend Environment Variables for QuickPrep
# Copy this file to .env and fill in your actual values

# Auth0 Configuration
AUTH0_DOMAIN=your-auth0-domain.auth0.com
AUTH0_API_AUDIENCE=https://your-api-audience
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret

# Supabase Configuration
SUPABASE_URL=https://your-project-ref.supabase.co
SUPABASE_KEY=your-supabase-anon-key
SUPABASE_SERVICE_KEY=your-supabase-service-role-key

# OpenAI Configuration (Optional - for advanced embeddings)
OPENAI_API_KEY=your-openai-api-key

# Hugging Face Configuration (Optional - for model access tokens)
HUGGINGFACE_API_TOKEN=your-huggingface-token

# Application Configuration
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com

# File Upload Configuration
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=pdf

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://localhost:6379

# Database Configuration (if using additional databases)
DATABASE_URL=postgresql://user:password@localhost:5432/quickprep
